<div class="col-md-12">
	<div class="group">
		<%= link_to "新增討論群", new_discuss_group_path, class: "btn btn-primary pull-right" %>
	</div>
	<table class="table table-hover">
		<thead>
			<tr>
				<td>#</td>
				<td>Title</td>
				<td>Description</td>
				<td>Creator</td>
				<td>action</td>
			</tr>
		</thead>
		<tbody>
			<% @discuss_groups.each do |discuss_group| %>
			<tr>
				<td>#</td>
				<td><%= link_to discuss_group.title, discuss_group_path(discuss_group) %></td>
				<td><%= render_group_description(discuss_group) %></td>
				<td><%= discuss_group.user.email %></td>
				<td>
					<%if current_user && current_user == discuss_group.user %>
						<%= link_to "Edit", edit_discuss_group_path(discuss_group), class: "btn btn-default btn-sm" %>
						<%= link_to "Delete", discuss_group_path(discuss_group), method: :delete, class: "btn btn-default btn-sm" ,data: {confirm: "Are You Sure?"} %>
					<% end %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
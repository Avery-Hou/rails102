

<div class="col-md-4 col-md-offset-4">
	<h2>新增文章</h2>
	<%= simple_form_for [@discuss_group, @post] do |f| %>
		<div class="form-group">
			<%= f.input :content, label: "內容" %>
		</div>
		<div class="form-action">
			<%= f.submit "Submit", disable_with: "submiting...", class: "btn btn-primary" %>
		</div>
	<% end %>
</div>